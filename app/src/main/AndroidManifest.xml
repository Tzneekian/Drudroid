        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="example.com.drudroid.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="example.com.drudroid.Lista"
            android:label="@string/title_activity_list" >
        </activity>
        <activity
            android:name="example.com.drudroid.Addarticolo"
            android:label="@string/title_activity_add" >
        </activity>
        <activity
            android:name="example.com.drudroid.Registrazione"
            android:label="@string/title_activity_registrazione" >
        </activity>
        <activity
            android:name="example.com.drudroid.Visualizzaarticolo"
            android:label="@string/title_activity_visualizzaarticolo" >
        </activity>
        <activity
            android:name="example.com.drudroid.Account_info"
            android:label="@string/title_activity_account_info" >
        </activity>
        <activity
            android:name="example.com.drudroid.Addcommento"
            android:label="@string/title_activity_addcommento" >
