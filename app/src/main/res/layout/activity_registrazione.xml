<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Registrazione"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username:"
        android:id="@+id/textView"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView"/>

    <EditText
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:id="@+id/editname"
        android:minWidth="80dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/editPassword"
        android:layout_gravity="left|center_vertical"
        android:backgroundTint="#040404"
        android:textColorHighlight="#050505" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password:"
        android:id="@+id/textView2"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView2"/>

    <EditText
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:id="@+id/editPass"
        android:minWidth="80dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/editPassword"
        android:layout_gravity="left|center_vertical"
        android:backgroundTint="#070707"
        android:textColorHighlight="#0c0c0c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email:"
        android:id="@+id/textView3"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView2"/>

    <EditText
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:id="@+id/editemail"
        android:minWidth="80dp"
        android:backgroundTint="#070707"
        android:textColorHighlight="#0c0c0c" />

    <Button
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:text="Invia"
        android:id="@+id/addRegistrazione_click"
        android:onClick="doRegistrazioneButton_click"
        android:layout_marginLeft="-2dp"
        android:layout_below="@+id/editemail"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-3dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/highlighted_text_material_light" />





</LinearLayout>
