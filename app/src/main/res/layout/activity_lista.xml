<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="."
android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/background">>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Articoli"
    android:id="@+id/textView"
    android:layout_gravity="center"/>

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/uri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp" />

<ListView
    android:layout_width="wrap_content"
    android:layout_height="99dp"
    android:id="@+id/listView"
    android:smoothScrollbar="true"
    android:fastScrollAlwaysVisible="false"
    android:layout_alignBottom="@+id/editText"
    android:layout_centerHorizontal="true"
    android:background="#ffffff"
    android:layout_weight="0.83" />






    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi articolo"
        android:id="@+id/buttonAddArticle"
        android:onClick="addArticoloButton_click"
        android:layout_below="@+id/editText"
        android:layout_toLeftOf="@+id/editText"
        android:layout_marginTop="14dp"
        android:background="@color/highlighted_text_material_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu utente"
        android:id="@+id/buttonmenu"
        android:onClick="addaccountinfo_click"
        android:background="@color/highlighted_text_material_light"
        android:layout_gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/buttonlogout"
        android:onClick="addlogout_click"
        android:layout_below="@+id/editText"
        android:layout_toLeftOf="@+id/editText"
        android:layout_marginTop="14dp"
        android:background="@color/highlighted_text_material_light"
        android:layout_gravity="right" />

</LinearLayout>
