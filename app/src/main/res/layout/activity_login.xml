<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/background">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benvenuto effettua il login o registrati per entrare"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username:"
        android:id="@+id/textView"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView2"/>

    <EditText
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:id="@+id/editUsername"
        android:minWidth="80dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/editPassword"
        android:layout_gravity="left|center_vertical"
        android:backgroundTint="#080808"
        android:textColorHighlight="#040404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password:"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/editUsername"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPassword"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/button"
        android:backgroundTint="#0c0d0c"
        android:autoText="false"
        android:longClickable="false"
        android:textColorHighlight="#0a0a0a" />


    <Button
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button"
        android:onClick="doLoginButton_click"
        android:layout_marginLeft="-2dp"
        android:layout_below="@+id/editPassword"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-3dp"
        android:background="@color/highlighted_text_material_light"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:text="Registrazione"
        android:id="@+id/addRegistrazione_click"
        android:onClick="doRegistrazioneButton_click"
        android:layout_marginLeft="-2dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-3dp"
        android:background="@color/highlighted_text_material_light"
        android:layout_gravity="center_horizontal" />



</LinearLayout>
